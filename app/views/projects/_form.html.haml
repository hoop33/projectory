= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, 'error')} errors prevented save"
      %ul
        - @project.errors.full_messages.each do |message|
          %li= message
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :description
    %br
    = f.text_area :description, :size => '30x5'
  %p
    = f.label :color
    %br
    = f.text_field :color
    #colorpicker
  %p
    = f.label :target_date
    %br
    = f.date_select :target_date
  .actions
    = f.submit 'Save', :class => 'button'
    or
    = link_to 'Cancel', projects_path